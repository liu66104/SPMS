<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"
        android:background="@color/blue_background">

        <ImageView
            android:id="@+id/iv_back_about"
            android:layout_width="@dimen/Twenty_five"
            android:layout_height="@dimen/Twenty_five"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/twelve"
            android:src="@mipmap/back_two" />

        <TextView
            android:id="@+id/tv_about_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="@dimen/twenty" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_marginTop="50dp"
                android:id="@+id/iv_about"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/img_about" />

            <TextView
                android:id="@+id/tv_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_about"
                android:layout_centerInParent="true"
                android:text="研华光伏电站移动运维"
                android:textSize="@dimen/text_eighteen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_app"
                android:layout_centerInParent="true"
                android:text="Android2.1.612a"
                android:textSize="@dimen/text_eighteen" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <TextView
                android:id="@+id/tv_ban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textSize="@dimen/text_eighteen" />

            <RelativeLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_ben"
                android:orientation="horizontal">
                    <TextView
                        android:textSize="12sp"
                        android:id="@+id/tv_about1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="研华公司         版权所有"
                        android:textColor="@color/text_about" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_ben"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_eighteen"
                android:layout_below="@+id/tv_ban"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>