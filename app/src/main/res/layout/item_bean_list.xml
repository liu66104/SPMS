<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_search_point"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:src="@drawable/text_shape_green"
        android:layout_width="@dimen/Twenty_five"
        android:layout_height="@dimen/Twenty_five" />
    <TextView
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:id="@+id/tv_search_name"
        android:text="YB1001"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginBottom="@dimen/five"
        android:layout_marginTop="@dimen/five"
        android:scaleType="fitXY"
        android:layout_marginRight="20dp"
        android:id="@+id/iv_search_power"
        android:layout_alignParentRight="true"
        android:layout_width="60dp"
        android:layout_height="60dp" />
</RelativeLayout>